generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  email String @id
  contra String
  nombre  String

  foto Foto_Usuario @relation(fields: [foto_perfil], references: [Id_fotousu])
  foto_perfil Int

  typo_emprendimiento Emprendimiento @relation(fields: [typo_id], references: [typo])
  typo_id String

  Id_contactos Contactos @relation(fields: [contacto], references: [Id_contactos])
  contacto Int

}

model Foto_Usuario {
  Id_fotousu Int @id @default(autoincrement())
  foto_perfil  String

  usuarios Usuario[]
}

model Contactos {
  Id_contactos Int @id @default(autoincrement())
  telefono Int
  nombre String
  redes_soc String
  pref_com String
  notas_perz String
  email_contactos String

  usuario Usuario[]
}

model Emprendimiento {
  typo String @id
  descripcion String
  nombre String 

  usuario Usuario[]
}

model Logotipo {
  link_plantilla String @id
  descripcion_logotipo String
}

model Foto_logotipo {
  Id_foto_logotipo  Int @id @default(autoincrement())
  foto_logotipo String
}

model Colores_marca {
  nom_colores String @id
  foto String
}

model Marketing_emprendimiento {
  Id_marketing_emprendimiento Int @id @default(autoincrement())
}

model Marketing {
  Id_marketing Int @id @default(autoincrement())
  costo Float
  stock Int
}

model Aplicaciones {
  nombre String @id
  desc_uso String
  link_tuto String
  link_uso String
}

model Aplicaciones_foto {
  Id_aplicaciones_foto Int @id @default(autoincrement())
  foto String
}

model Publicaciones {
  link_plantilla String  @id
  desc String
  nombre String
}

model Publicaciones_foto {
  Id_publicaciones_foto Int @id @default(autoincrement())
  foto String
}

model Productos {
  nombre_producto String @id
  pasos String
  descripcion String
  stock Int
  costo Float
}

model Productos_foto {
  Id_productos_foto Int @id @default(autoincrement())
  foto String
}

model Materiales_producto {
  Id_materiales_producto Int @id @default(autoincrement())
}

model Materiales {
  nombre String @id
  costo Float
  stock Int
}

model Materiales_foto {
  Id_materiales_foto Int @id @default(autoincrement())
  foto String
}